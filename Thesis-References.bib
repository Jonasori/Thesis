keywords = {ISM: molecules,astrochemistry,protoplanetary disks,stars: formation},
number = {2},
title = {{Chemical processes in protoplanetary disks. II. on the importance of photochemistry and X-ray ionization}},
volume = {747},
year = {2012}
}
