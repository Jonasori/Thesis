journal = {Astrophys. J.},
number = {2013},
pages = {1--22},
title = {{Disk masses around solar-mass stars are underestimated by CO observations}},
url = {http://arxiv.org/abs/1704.05508{\%}0Ahttp://dx.doi.org/10.3847/1538-4357/aa6e4c},
