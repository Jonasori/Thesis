file = {:Volumes/disks/jonas/Thesis/References/Walsh et al (2011).pdf:pdf},
issn = {00280836},
journal = {Nature},
number = {7355},
pages = {206--209},
title = {{A low mass for Mars from Jupiter's early gas-driven migration}},
volume = {475},
year = {2011}
}
