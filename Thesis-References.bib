journal = {Astrophys. J.},
number = {1},
pages = {11},
title = {{Strong Gravitational Lensing by Wave Dark Matter Halos}},
volume = {872},
year = {2019}
}
@article{Eisner2018,
abstract = {We present ALMA 850 {\$}\backslashmu{\$}m continuum observations of the Orion Nebula Cluster that provide the highest angular resolution ({\$}\backslashsim 0\backslashrlap{\{}.{\}}''1 \backslashapprox 40{\$} AU) and deepest sensitivity ({\$}\backslashsim 0.1{\$} mJy) of the region to date. We mosaicked a field containing {\$}\backslashsim 225{\$} optical or near-IR-identified young stars, {\$}\backslashsim 60{\$} of which are also optically-identified "proplyds". We detect continuum emission at 850 {\$}\backslashmu{\$}m towards {\$}\backslashsim 80{\$}{\%} of the proplyd sample, and {\$}\backslashsim 50{\$}{\%} of the larger sample of previously-identified cluster members. Detected objects have fluxes of {\$}\backslashsim 0.5{\$}-80 mJy. We remove sub-mm flux due to free-free emission in some objects, leaving a sample of sources detected in dust emission. Under standard assumptions of isothermal, optically thin disks, sub-mm fluxes correspond to dust masses of {\$}\backslashsim 0.5{\$} to 80 Earth masses. We measure the distribution of disk sizes, and find that disks in this region are particularly compact. Such compact disks are likely to be significantly optically thick. The distributions of sub-mm flux and inferred disk size indicate smaller, lower-flux disks than in lower-density star-forming regions of similar age. Measured disk flux is correlated weakly with stellar mass, contrary to studies in other star forming regions that found steeper correlations. We find a correlation between disk flux and distance from the massive star {\$}\backslashtheta{\^{}}1{\$} Ori C, suggesting that disk properties in this region are influenced strongly by the rich cluster environment.},
archivePrefix = {arXiv},
arxivId = {1805.03669},
