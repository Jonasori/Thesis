doi = {10.1086/426567},
issn = {0004-6256},
journal = {Astron. J.},
keywords = {formation,individual,ism,jets and outflows,m42,m43,main-sequence,planetary systems,pre,protoplanetary disks,reflection nebulae,stars},
number = {1},
pages = {382--392},
title = {{New Silhouette Disks with Reflection Nebulae and Outflows in the Orion Nebula and M43}},
