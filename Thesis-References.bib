journal = {Astrophys. J.},
number = {2013},
pages = {1--8},
title = {{The Radial Distribution of H2 and CO in TW Hya as Revealed by Resolved ALMA Observations of CO Isotopologues}},
url = {http://arxiv.org/abs/1603.08520{\%}0Ahttp://dx.doi.org/10.3847/0004-637X/823/2/91},
